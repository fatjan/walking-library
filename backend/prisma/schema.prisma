generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgres"
  url      = env("DATABASE_URL")
}

model User {
  id            Int       @id @default(autoincrement())
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  email         String    @unique
  name          String?
  username      String    @unique
  password      String
  phoneNumber   String
  address       String
  role          String
  status        String
  borrows       Borrow[]
  borrowedBooks Book[]
}

model Book {
  id          Int      @id @default(autoincrement())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  title       String
  author      String
  status      Status   @default(ComingSoon)
  borrower    User?    @relation(fields: [borrowerId], references: [id])
  borrowerId  Int?
}

enum Status {
  Available
  Borrowed
  Lost
  ComingSoon
}

model Borrow {
  id          Int      @id @default(autoincrement())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  borrowedBy  User?    @relation(fields: [borrowerId], references: [id])
  borrowerId  Int?
  expiredAt   DateTime
}